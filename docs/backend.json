{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user within the HobbyDork VaultVerse application.",
      "properties": {
        "uid": {
          "type": "string",
          "description": "Unique identifier for the user entity (matches Firebase Auth UID)."
        },
        "email": {
          "type": "string",
          "description": "Email address of the user.",
          "format": "email"
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "avatar": {
          "type": "string",
          "description": "URL to the user's avatar image."
        },
        "status": {
          "type": "string",
          "description": "Status of the user account (ACTIVE, LIMITED, SUSPENDED).",
          "enum": [
            "ACTIVE",
            "LIMITED",
            "SUSPENDED"
          ]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "role": {
          "type": "string",
          "enum": [
            "user",
            "admin"
          ]
        },
        "storeId": {
          "type": "string",
          "description": "The ID of the store owned by the user, if any."
        },
        "paymentMethod": {
          "type": "string",
          "enum": [
            "PAYPAL",
            "VENMO"
          ]
        },
        "paymentIdentifier": {
          "type": "string"
        },
        "emailVerified": {
          "type": "boolean"
        },
        "oneAccountAcknowledged": {
          "type": "boolean"
        },
        "goodsAndServicesAgreed": {
          "type": "boolean"
        },
        "notificationPreferences": {
          "type": "object",
          "properties": {
            "notifyMessages": {
              "type": "boolean"
            },
            "notifyOrders": {
              "type": "boolean"
            },
            "notifyISO24": {
              "type": "boolean"
            },
            "notifySpotlight": {
              "type": "boolean"
            }
          }
        }
      },
      "required": [
        "uid",
        "email",
        "displayName",
        "status",
        "createdAt",
        "updatedAt",
        "role",
        "emailVerified"
      ]
    },
    "Store": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Store",
      "type": "object",
      "description": "Represents a user's store within the HobbyDork VaultVerse application.",
      "properties": {
        "storeId": {
          "type": "string",
          "description": "Unique identifier for the store entity (matches document ID)."
        },
        "ownerUid": {
          "type": "string",
          "description": "Reference to the User who owns the store."
        },
        "storeName": {
          "type": "string",
          "description": "Name of the store."
        },
        "slug": {
          "type": "string",
          "description": "Unique, lowercased, store URL slug."
        },
        "about": {
          "type": "string",
          "description": "'About' section for the store."
        },
        "avatarUrl": {
          "type": "string",
          "description": "URL to the store's avatar image.",
          "format": "uri"
        },
        "ratingAverage": {
          "type": "number",
          "description": "Average rating of the store."
        },
        "ratingCount": {
          "type": "number",
          "description": "Total number of ratings."
        },
        "itemsSold": {
          "type": "number",
          "description": "Total number of items sold."
        },
        "status": {
          "type": "string",
          "enum": [
            "ACTIVE",
            "HIDDEN",
            "DISABLED"
          ]
        },
        "isSpotlighted": {
          "type": "boolean"
        },
        "spotlightUntil": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp until the store is spotlighted."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "storeId",
        "ownerUid",
        "storeName",
        "slug",
        "about",
        "status",
        "isSpotlighted",
        "createdAt",
        "updatedAt"
      ]
    },
    "Listing": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Listing",
      "type": "object",
      "description": "Represents a collectible listing within the HobbyDork VaultVerse application.",
      "properties": {
        "listingId": {
          "type": "string",
          "description": "Unique identifier for the listing entity (matches document ID)."
        },
        "storeId": {
          "type": "string",
          "description": "Reference to the Store the listing belongs to."
        },
        "ownerUid": {
          "type": "string",
          "description": "UID of the user who owns the listing."
        },
        "title": {
          "type": "string",
          "description": "Title of the listing."
        },
        "category": {
          "type": "string",
          "description": "Category of the collectible."
        },
        "description": {
          "type": "string",
          "description": "Detailed description of the collectible."
        },
        "price": {
          "type": "number",
          "description": "Price of the collectible."
        },
        "condition": {
          "type": "string",
          "description": "Condition of the collectible.",
          "enum": [
            "NEW",
            "LIKE_NEW",
            "VERY_GOOD",
            "GOOD",
            "FAIR",
            "POOR"
          ]
        },
        "quantityTotal": {
          "type": "number",
          "description": "The initial total quantity of the item."
        },
        "quantityAvailable": {
          "type": "number",
          "description": "The current number of items available for sale."
        },
        "state": {
          "type": "string",
          "description": "The current state of the listing.",
          "enum": [
            "DRAFT",
            "ACTIVE",
            "HIDDEN",
            "SOLD"
          ]
        },
        "tags": {
          "type": "array",
          "description": "Keywords associated with the listing.",
          "items": {
            "type": "string"
          }
        },
        "imageUrls": {
          "type": "array",
          "description": "Array of URLs for the listing images.",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "primaryImageUrl": {
          "type": "string",
          "description": "The primary image URL for the listing.",
          "format": "uri"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "listingId",
        "storeId",
        "ownerUid",
        "title",
        "category",
        "description",
        "price",
        "condition",
        "quantityTotal",
        "quantityAvailable",
        "state",
        "imageUrls",
        "primaryImageUrl",
        "createdAt",
        "updatedAt"
      ]
    },
    "Order": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Order",
      "type": "object",
      "description": "Represents an order within the HobbyDork VaultVerse application.",
      "properties": {
        "orderId": {
          "type": "string",
          "description": "Unique identifier for the order entity."
        },
        "buyerUid": {
          "type": "string",
          "description": "Reference to the User who placed the order."
        },
        "sellerUid": {
          "type": "string",
          "description": "Reference to the User who owns the store."
        },
        "storeId": {
          "type": "string",
          "description": "Reference to the Store where order was placed."
        },
        "listingItems": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "listingId": { "type": "string" },
              "title": { "type": "string" },
              "quantity": { "type": "number" },
              "pricePerUnit": { "type": "number" },
              "primaryImageUrl": { "type": "string" }
            },
            "required": ["listingId", "title", "quantity", "pricePerUnit"]
          }
        },
        "totalPrice": {
          "type": "number"
        },
        "state": {
          "type": "string",
          "enum": [
            "PENDING_PAYMENT",
            "PAYMENT_SENT",
            "SHIPPED",
            "DELIVERED",
            "COMPLETED",
            "CANCELLED"
          ]
        },
        "buyerShippingAddress": {
            "type": ["object", "null"],
            "properties": {
                "name": {"type": "string"},
                "address1": {"type": "string"},
                "address2": {"type": ["string", "null"]},
                "city": {"type": "string"},
                "state": {"type": "string"},
                "zip": {"type": "string"},
                "country": {"type": "string"}
            },
            "required": ["name", "address1", "city", "state", "zip", "country"]
        },
        "paymentMethod": {
            "type": "string",
            "enum": ["PAYPAL", "VENMO"]
        },
        "paymentIdentifier": {
            "type": "string"
        },
        "trackingNumber": {
          "type": ["string", "null"]
        },
        "trackingCarrier": {
          "type": ["string", "null"]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "orderId",
        "buyerUid",
        "sellerUid",
        "storeId",
        "listingItems",
        "totalPrice",
        "state",
        "buyerShippingAddress",
        "paymentMethod",
        "createdAt",
        "updatedAt"
      ]
    },
    "Chat": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Chat",
      "type": "object",
      "description": "A single message in the community chat.",
      "properties": {
        "id": {
          "type": "string"
        },
        "userId": {
          "type": "string"
        },
        "userName": {
          "type": "string"
        },
        "userAvatar": {
          "type": "string"
        },
        "text": {
          "type": "string"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "userId",
        "userName",
        "text",
        "timestamp"
      ]
    },
    "ISO24": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "ISO24 Post",
      "type": "object",
      "description": "Represents an 'In Search Of' post, visible for 24 hours.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the ISO post."
        },
        "creatorUid": {
          "type": "string",
          "description": "The UID of the user who created the post."
        },
        "userName": {
            "type": "string"
        },
        "userAvatar": {
            "type": "string"
        },
        "title": {
          "type": "string",
          "description": "Title of the item being sought."
        },
        "category": {
          "type": "string",
          "description": "Category of the item."
        },
        "description": {
          "type": "string",
          "description": "Detailed description of the item."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "expiresAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the post automatically expires."
        },
        "status": {
            "type": "string",
            "enum": ["ACTIVE", "EXPIRED"]
        }
      },
      "required": [
        "id",
        "creatorUid",
        "userName",
        "userAvatar",
        "title",
        "category",
        "description",
        "createdAt",
        "expiresAt",
        "status"
      ]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/entities/User"
          },
          "description": "Stores user profile data. Accessible only by the user themselves.",
          "params": [
            {
              "name": "userId",
              "description": "The unique identifier of the user."
            }
          ]
        }
      },
      {
        "path": "/storefronts/{storefrontId}",
        "definition": {
          "entityName": "Store",
          "schema": {
            "$ref": "#/entities/Store"
          },
          "description": "Stores store data. Publicly readable, but only the owner can edit.",
          "params": [
            {
              "name": "storefrontId",
              "description": "The unique identifier of the storefront."
            }
          ]
        }
      },
      {
        "path": "/listings/{listingId}",
        "definition": {
          "entityName": "Listing",
          "schema": {
            "$ref": "#/entities/Listing"
          },
          "description": "Stores listing data. Publicly readable, only owner can edit.",
          "params": [
            {
              "name": "listingId",
              "description": "The unique identifier of the listing."
            }
          ]
        }
      },
      {
        "path": "/orders/{orderId}",
        "definition": {
          "entityName": "Order",
          "schema": {
            "$ref": "#/entities/Order"
          },
          "description": "Stores order data. Accessible only by the buyer and seller.",
          "params": [
            {
              "name": "orderId",
              "description": "The unique identifier of the order."
            }
          ]
        }
      },
      {
        "path": "/chat/{messageId}",
        "definition": {
          "entityName": "Chat",
          "schema": {
            "$ref": "#/entities/Chat"
          },
          "description": "Stores community chat messages. Readable by any signed-in user.",
          "params": [
            {
              "name": "messageId",
              "description": "The unique identifier of the chat message."
            }
          ]
        }
      },
       {
        "path": "/iso24Posts/{isoId}",
        "definition": {
          "entityName": "ISO24",
          "schema": {
            "$ref": "#/entities/ISO24"
          },
          "description": "Stores 'In Search Of' posts, which expire after 24 hours.",
          "params": [
            {
              "name": "isoId",
              "description": "The unique identifier of the ISO post."
            }
          ]
        }
      }
    ]
  }
}
