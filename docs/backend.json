{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user within the HobbyDork VaultVerse application.",
      "properties": {
        "uid": {
          "type": "string",
          "description": "Unique identifier for the user entity (matches Firebase Auth UID)."
        },
        "email": {
          "type": "string",
          "description": "Email address of the user.",
          "format": "email"
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "avatar": {
          "type": "string",
          "description": "URL to the user's avatar image."
        },
        "status": {
          "type": "string",
          "description": "Status of the user account (ACTIVE, LIMITED, SUSPENDED).",
          "enum": [
            "ACTIVE",
            "LIMITED",
            "SUSPENDED"
          ]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "role": {
          "type": "string",
          "enum": [
            "user",
            "admin"
          ]
        },
        "storeId": {
          "type": "string",
          "description": "The ID of the store owned by the user, if any."
        },
        "paymentMethod": {
          "type": "string",
          "enum": [
            "PAYPAL",
            "VENMO"
          ]
        },
        "paymentIdentifier": {
          "type": "string"
        },
        "emailVerified": {
          "type": "boolean"
        },
        "oneAccountAcknowledged": {
          "type": "boolean"
        },
        "goodsAndServicesAgreed": {
          "type": "boolean"
        },
        "notificationPreferences": {
          "type": "object",
          "properties": {
            "notifyMessages": {
              "type": "boolean"
            },
            "notifyOrders": {
              "type": "boolean"
            },
            "notifyISO24": {
              "type": "boolean"
            },
            "notifySpotlight": {
              "type": "boolean"
            }
          }
        }
      },
      "required": [
        "uid",
        "email",
        "displayName",
        "status",
        "createdAt",
        "updatedAt",
        "role",
        "emailVerified"
      ]
    },
    "Store": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Store",
      "type": "object",
      "description": "Represents a user's store within the HobbyDork VaultVerse application.",
      "properties": {
        "storeId": {
          "type": "string",
          "description": "Unique identifier for the store entity (matches document ID)."
        },
        "ownerUid": {
          "type": "string",
          "description": "Reference to the User who owns the store."
        },
        "storeName": {
          "type": "string",
          "description": "Name of the store."
        },
        "slug": {
          "type": "string",
          "description": "Unique, lowercased, store URL slug."
        },
        "about": {
          "type": "string",
          "description": "'About' section for the store."
        },
        "avatarUrl": {
          "type": "string",
          "description": "URL to the store's avatar image.",
          "format": "uri"
        },
        "ratingAverage": {
          "type": "number",
          "description": "Average rating of the store."
        },
        "ratingCount": {
          "type": "number",
          "description": "Total number of ratings."
        },
        "itemsSold": {
          "type": "number",
          "description": "Total number of items sold."
        },
        "status": {
          "type": "string",
          "enum": [
            "ACTIVE",
            "HIDDEN",
            "DISABLED"
          ]
        },
        "isSpotlighted": {
          "type": "boolean"
        },
        "spotlightUntil": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp until the store is spotlighted."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "storeId",
        "ownerUid",
        "storeName",
        "slug",
        "about",
        "status",
        "isSpotlighted",
        "createdAt",
        "updatedAt"
      ]
    },
    "Listing": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Listing",
      "type": "object",
      "description": "Represents a collectible listing within the HobbyDork VaultVerse application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the listing entity."
        },
        "storefrontId": {
          "type": "string",
          "description": "Reference to the Storefront the listing belongs to. (Relationship: Storefront 1:N Listing)"
        },
        "title": {
          "type": "string",
          "description": "Title of the listing."
        },
        "category": {
          "type": "string",
          "description": "Category of the collectible."
        },
        "description": {
          "type": "string",
          "description": "Detailed description of the collectible."
        },
        "price": {
          "type": "number",
          "description": "Price of the collectible."
        },
        "condition": {
          "type": "string",
          "description": "Condition of the collectible."
        },
        "quantity": {
          "type": "number",
          "description": "Quantity of the collectible available."
        },
        "images": {
          "type": "array",
          "description": "URLs or storage paths to the images of the collectible.",
          "items": {
            "type": "string"
          }
        },
        "tags": {
          "type": "array",
          "description": "Keywords associated with the listing.",
          "items": {
            "type": "string"
          }
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "storefrontId",
        "title",
        "category",
        "description",
        "price",
        "condition",
        "quantity",
        "images",
        "createdAt"
      ]
    },
    "Order": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Order",
      "type": "object",
      "description": "Represents an order within the HobbyDork VaultVerse application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the order entity."
        },
        "buyerId": {
          "type": "string",
          "description": "Reference to the User who placed the order."
        },
        "sellerId": {
          "type": "string",
          "description": "Reference to the User who owns the listing."
        },
        "listingId": {
          "type": "string",
          "description": "Reference to the Listing that was ordered."
        },
        "listingTitle": {
          "type": "string"
        },
        "listingImage": {
          "type": "string"
        },
        "quantity": {
          "type": "number"
        },
        "totalPrice": {
          "type": "number"
        },
        "createdAt": {
          "type": "string",
          "description": "The date and time the order was placed.",
          "format": "date-time"
        },
        "status": {
          "type": "string",
          "description": "Status of the order.",
          "enum": [
            "Pending Payment",
            "Payment Sent",
            "Shipped",
            "Delivered",
            "Completed",
            "Cancelled"
          ]
        },
        "trackingNumber": {
          "type": "string",
          "description": "Tracking number for the order."
        },
        "carrier": {
          "type": "string",
          "description": "Carrier information for the order."
        },
        "shippingAddress": {
          "type": "string",
          "description": "Shipping address provided by the user."
        }
      },
      "required": [
        "id",
        "buyerId",
        "sellerId",
        "listingId",
        "createdAt",
        "status",
        "listingTitle",
        "listingImage",
        "quantity",
        "totalPrice"
      ]
    },
    "Chat": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Chat",
      "type": "object",
      "description": "A single message in the community chat.",
      "properties": {
        "id": {
          "type": "string"
        },
        "userId": {
          "type": "string"
        },
        "userName": {
          "type": "string"
        },
        "userAvatar": {
          "type": "string"
        },
        "text": {
          "type": "string"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "userId",
        "userName",
        "text",
        "timestamp"
      ]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/entities/User"
          },
          "description": "Stores user profile data. Accessible only by the user themselves.",
          "params": [
            {
              "name": "userId",
              "description": "The unique identifier of the user."
            }
          ]
        }
      },
      {
        "path": "/storefronts/{storefrontId}",
        "definition": {
          "entityName": "Store",
          "schema": {
            "$ref": "#/entities/Store"
          },
          "description": "Stores store data. Publicly readable, but only the owner can edit.",
          "params": [
            {
              "name": "storefrontId",
              "description": "The unique identifier of the storefront."
            }
          ]
        }
      },
      {
        "path": "/listings/{listingId}",
        "definition": {
          "entityName": "Listing",
          "schema": {
            "$ref": "#/entities/Listing"
          },
          "description": "Stores listing data. Publicly readable, only owner can edit.",
          "params": [
            {
              "name": "listingId",
              "description": "The unique identifier of the listing."
            }
          ]
        }
      },
      {
        "path": "/orders/{orderId}",
        "definition": {
          "entityName": "Order",
          "schema": {
            "$ref": "#/entities/Order"
          },
          "description": "Stores order data. Accessible only by the buyer and seller.",
          "params": [
            {
              "name": "orderId",
              "description": "The unique identifier of the order."
            }
          ]
        }
      },
      {
        "path": "/chat/{messageId}",
        "definition": {
          "entityName": "Chat",
          "schema": {
            "$ref": "#/entities/Chat"
          },
          "description": "Stores community chat messages. Readable by any signed-in user.",
          "params": [
            {
              "name": "messageId",
              "description": "The unique identifier of the chat message."
            }
          ]
        }
      }
    ]
  }
}
