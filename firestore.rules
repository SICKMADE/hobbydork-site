rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --------------------------------
    // Helper Functions
    // --------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isUser(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      // Use exists() to avoid errors on non-existent documents
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isActiveUser(userId) {
        return get(/databases/$(database)/documents/users/$(userId)).data.status == 'ACTIVE';
    }

    function isStoreOwner(storeId) {
      let store = get(/databases/$(database)/documents/storefronts/$(storeId));
      return store != null && isUser(store.data.ownerUid);
    }
    
    function isOrderParticipant(order) {
        return isSignedIn() && (request.auth.uid == order.buyerUid || request.auth.uid == order.sellerUid);
    }
    
    function isOrderBuyer(orderId) {
        let order = get(/databases/$(database)/documents/orders/$(orderId)).data;
        return order != null && isUser(order.buyerUid);
    }
    
    // --- Data Validation Helpers ---
    
    function isValidUserWrite(data) {
        // This validation is simplified for the create step.
        // More specific validation can be done in the update rule.
        return data.uid == request.auth.uid;
    }
    
    function isValidStoreWrite(data) {
        return data.containsAll(['storeName', 'slug', 'about', 'avatarUrl', 'ownerUid', 'status', 'isSpotlighted', 'createdAt', 'updatedAt'])
            && data.storeName is string && data.slug is string && data.about is string;
    }

    // --------------------------------
    // Collection Rules
    // --------------------------------

    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isAdmin();
      // Allow user creation if the document ID matches the user's UID
      allow create: if isUser(userId) && isValidUserWrite(request.resource.data);
      allow update: if isUser(userId) 
                      // Prevent users from changing their own role, status, or email verification status
                      && request.resource.data.role == resource.data.role
                      && request.resource.data.status == resource.data.status
                      && request.resource.data.emailVerified == resource.data.emailVerified
                      // Allow admins to update user roles
                      || isAdmin();
      allow delete: if false; // Users should not be able to delete their own account from the client
    }
    
    match /users/{userId}/notifications/{notificationId} {
        allow read, write: if isUser(userId);
    }

    match /storefronts/{storefrontId} {
      allow get, list: if true;
      allow create: if isUser(request.resource.data.ownerUid) && isValidStoreWrite(request.resource.data);
      allow update: if isUser(resource.data.ownerUid) && isValidStoreWrite(request.resource.data);
      allow delete: if false;
      
      // Reviews subcollection
      match /reviews/{reviewId} {
          allow get, list: if true;
          // reviewId must be the orderId
          // Only the buyer of the order can create a review
          // A review for the order must not already exist
          allow create: if reviewId == request.resource.data.orderId
                        && isOrderBuyer(reviewId)
                        && !existsAfter(/databases/$(database)/documents/storefronts/$(storefrontId)/reviews/$(reviewId));
          allow update, delete: if false; // Reviews are immutable in v1
      }
    }
    
    match /listings/{listingId} {
      allow get, list: if true;
      allow create: if isUser(request.resource.data.ownerUid) 
                      && isStoreOwner(request.resource.data.storeId)
                      && isActiveUser(request.auth.uid);
      allow update: if isUser(resource.data.ownerUid);
      allow delete: if isUser(resource.data.ownerUid);
    }

    match /orders/{orderId} {
      allow get: if isOrderParticipant(resource.data);
      allow list: if false; // Users should query for their own orders, not list all.
      allow create: if isUser(request.resource.data.buyerUid);
      allow update: if isOrderParticipant(resource.data);
      allow delete: if false; // Orders should be cancelled via a status update.
    }
    
    match /chat/{messageId} {
        allow read, write: if isSignedIn();
    }

    match /iso24Posts/{isoId} {
        allow get, list: if isSignedIn();
        allow create: if isUser(request.resource.data.creatorUid) && isActiveUser(request.auth.uid);
        allow update, delete: if isUser(resource.data.creatorUid);
    }
    
    // Placeholder rules for features to be implemented
    match /watchlists/{userId} {
        allow read, write: if isUser(userId);
    }
    
    match /favoriteStores/{userId} {
        allow read, write: if isUser(userId);
    }
    
     match /reports/{reportId} {
        allow create: if isSignedIn();
        allow read, update, delete: if false; // Admin only
    }

    match /spotlightSlots/{slotId} {
        allow get, list: if true;
        allow create, update, delete: if false; // Admin only
    }
  }
}
