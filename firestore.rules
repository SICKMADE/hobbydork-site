rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ------------- Helpers -------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isServer() {
      return request.auth == null;
    }

    function uid() {
      return request.auth.uid;
    }

    function userDoc() {
      return get(/databases/$(database)/documents/users/$(uid()));
    }

    function userData() {
      return userDoc().data;
    }

    function userStatus() {
      return isSignedIn() ? userData().status : null;
    }

    function userRole() {
      return isSignedIn() ? userData().role : null;
    }

    function userIsActive() {
      return isSignedIn() && userStatus() == "ACTIVE";
    }

    function userIsAdmin() {
      return isSignedIn() && userRole() == "ADMIN";
    }

    // Seller helpers
    function userSellerStatus() {
      return isSignedIn() && userData().sellerStatus != null
        ? userData().sellerStatus
        : "NONE";
    }

    function userIsSeller() {
      return isSignedIn() &&
             userData().isSeller == true &&
             userData().storeId != "";
    }

    function userCanCreateStore() {
      return isSignedIn() &&
             userIsActive() &&
             !userIsSeller() &&
             userData().storeId == "" &&
             userData().stripeTermsAgreed == true &&
             userSellerStatus() == "APPROVED";
    }

    function userCanApplyToBeSeller() {
      let status = userSellerStatus();
      return isSignedIn() &&
             userIsActive() &&
             (status == "NONE" || status == "REJECTED");
    }

    function isConversationParticipant(conversationId) {
      return isSignedIn() &&
        (
          get(/databases/$(database)/documents/conversations/$(conversationId))
            .data.participantUids
            .hasAny([uid()])
          ||
          get(/databases/$(database)/documents/conversations/$(conversationId))
            .data.participants
            .hasAny([uid()])
        );
    }

    // ------------- users -------------

    match /users/{userId} {
      allow get, list: if isSignedIn();

      allow create: if isSignedIn() &&
                    uid() == userId &&
                    request.resource.data.role == "USER" &&
                    request.resource.data.status == "ACTIVE";

      allow update: if isSignedIn() &&
                    (uid() == userId || userIsAdmin()) &&
                    request.resource.data.role == resource.data.role &&
                    request.resource.data.status == resource.data.status &&
                    request.resource.data.displayName == resource.data.displayName;

      allow delete: if userIsAdmin();

      match /notifications/{id} {
        allow read, write: if isSignedIn() && uid() == userId;
      }

      match /watchlist/{listingId} {
        allow read, write: if isSignedIn() && uid() == userId;
      }

      match /favoriteStores/{storeId} {
        allow read, write: if isSignedIn() && uid() == userId;
      }

      match /storefronts/{storeId} {
        allow read, write: if isSignedIn() && uid() == userId;
      }
    }

    // ------------- sellerApplications -------------

    match /sellerApplications/{applicationId} {
      allow get, list: if isSignedIn() &&
                       (userIsAdmin() || resource.data.ownerUid == uid());

      allow create: if isSignedIn() &&
                    userCanApplyToBeSeller() &&
                    request.resource.data.ownerUid == uid() &&
                    request.resource.data.status == "PENDING";

      allow update, delete: if userIsAdmin();
    }

    // ------------- storefronts -------------

    match /storefronts/{storeId} {
      allow get, list: if isSignedIn();

      allow create: if isSignedIn() && (
        (
          userCanCreateStore() &&
          request.resource.data.ownerUid == uid() &&
          request.resource.data.storeName == userData().displayName &&
          request.resource.data.status == "ACTIVE"
        ) ||
        userIsAdmin()
      );

      allow update: if isSignedIn() &&
                    (
                      (userIsSeller() && resource.data.ownerUid == uid()) ||
                      userIsAdmin()
                    ) &&
                    request.resource.data.storeName == resource.data.storeName &&
                    request.resource.data.slug == resource.data.slug &&
                    request.resource.data.ownerUid == resource.data.ownerUid;

      allow delete: if isSignedIn() &&
                    (
                      (userIsSeller() && resource.data.ownerUid == uid()) ||
                      userIsAdmin()
                    );

      match /reviews/{reviewId} {
        function reviewOrderData() {
          return get(
            /databases/$(database)/documents/orders/$(request.resource.data.orderId)
          ).data;
        }

        allow get, list: if isSignedIn();

        allow create: if userIsActive() &&
                      request.resource.data.buyerUid == uid() &&
                      reviewOrderData().buyerUid == uid() &&
                      reviewOrderData().storeId == storeId;

        allow update, delete: if userIsAdmin();
      }
    }

    // ------------- listings -------------

    match /listings/{listingId} {
      allow get, list: if isSignedIn();

      allow create: if isSignedIn() &&
                    ((userIsSeller() &&
                      request.resource.data.ownerUid == uid()) ||
                     userIsAdmin());

      allow update, delete: if isSignedIn() &&
                            ((userIsSeller() &&
                              resource.data.ownerUid == uid()) ||
                             userIsAdmin());
    }

    // ------------- orders (STRIPE FIX HERE) -------------

    match /orders/{orderId} {
      allow get, list: if isSignedIn() &&
                       (
                         userIsAdmin() ||
                         resource.data.buyerUid == uid() ||
                         resource.data.sellerUid == uid()
                       );

      allow create: if userIsActive() &&
                    request.resource.data.buyerUid == uid();

      allow update: if
        userIsAdmin()
        ||
        (
          isSignedIn() &&
          (
            resource.data.buyerUid == uid() ||
            resource.data.sellerUid == uid()
          )
        )
        ||
        (
          isServer() &&
          request.resource.data.state == "PAID" &&
          resource.data.state != "PAID"
        );

      allow delete: if userIsAdmin();
    }

    // ------------- iso24Posts -------------

    match /iso24Posts/{isoId} {
      allow get, list: if isSignedIn();

      allow create: if isSignedIn() &&
                    (userIsActive() || userIsAdmin()) &&
                    request.resource.data.ownerUid == uid();

      allow update, delete: if isSignedIn() &&
                            (
                              userIsAdmin() ||
                              (userIsActive() &&
                               resource.data.ownerUid == uid())
                            );

      match /comments/{commentId} {
        allow get, list: if isSignedIn();

        allow create: if userIsActive() &&
                      request.resource.data.authorUid == uid();

        allow update, delete: if isSignedIn() &&
                              (
                                userIsAdmin() ||
                                (userIsActive() &&
                                 resource.data.authorUid == uid())
                              );
      }
    }

    // ------------- communityMessages -------------

    match /communityMessages/{messageId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn() &&
                    (userIsActive() || userIsAdmin());
      allow update, delete: if userIsAdmin();
    }

    // ------------- conversations -------------

    match /conversations/{conversationId} {
      allow create: if isSignedIn() &&
                    request.resource.data.participantUids.hasAny([uid()]);

      allow get, list, update: if isSignedIn() &&
                               (isConversationParticipant(conversationId) ||
                                userIsAdmin());

      allow delete: if userIsAdmin();

      match /messages/{messageId} {
        allow get, list: if isSignedIn() &&
                         (isConversationParticipant(conversationId) ||
                          userIsAdmin());

        allow create: if isSignedIn() &&
                      isConversationParticipant(conversationId);

        allow update, delete: if isSignedIn() &&
                              (isConversationParticipant(conversationId) ||
                               userIsAdmin());
      }
    }

    // ------------- reports -------------

    match /reports/{reportId} {
      allow create: if isSignedIn() &&
                    request.resource.data.reporterUid == uid();

      allow get, list: if isSignedIn() &&
                       (userIsAdmin() ||
                        resource.data.reporterUid == uid());

      allow update, delete: if userIsAdmin();
    }

    // ------------- spotlightSlots -------------

    match /spotlightSlots/{slotId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if userIsAdmin();
    }

    // ------------- deny everything else -------------

    match /{path=**} {
      allow read, write: if false;
    }
  }
}