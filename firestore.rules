rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ------------- Helpers -------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isEmailVerified() {
      return isSignedIn() && request.auth.token.email_verified == true;
    }

    function uid() {
      return request.auth.uid;
    }

    function userDoc() {
      return get(/databases/$(database)/documents/users/$(uid()));
    }

    function userData() {
      return userDoc().data;
    }

    function userStatus() {
      return isSignedIn() && userDoc().data != null ? userData().status : null;
    }

    function userRole() {
      return isSignedIn() && userDoc().data != null ? userData().role : null;
    }

    function userIsActive() {
      // Email verification required for any "active" capabilities.
      return isEmailVerified() && userStatus() == "ACTIVE";
    }

    function userIsAdmin() {
      return isSignedIn() && userRole() == "ADMIN";
    }

    function userIsModerator() {
      return isSignedIn() && userRole() == "MODERATOR";
    }

    function userIsStaff() {
      return userIsAdmin() || userIsModerator();
    }

    // Seller helpers
    function userSellerStatus() {
      return isSignedIn() && userData().sellerStatus != null
        ? userData().sellerStatus
        : "NONE";
    }

    function userIsSeller() {
      return isSignedIn() &&
             userData().isSeller == true &&
             userData().storeId != "";
    }

    function userCanCreateStore() {
      return isSignedIn() &&
             userIsActive() &&
             !userIsSeller() &&
             userData().storeId == "" &&
             userData().stripeOnboarded == true &&
             userData().stripeAccountId != null &&
             userData().stripeTermsAgreed == true;
    }

    function userCanApplyToBeSeller() {
      let status = userSellerStatus();
      return isSignedIn() &&
             userIsActive() &&
             (status == "NONE" || status == "REJECTED");
    }

    function isConversationParticipant(conversationId) {
      return isSignedIn() &&
        (
          get(/databases/$(database)/documents/conversations/$(conversationId))
            .data.participantUids
            .hasAny([uid()])
          ||
          get(/databases/$(database)/documents/conversations/$(conversationId))
            .data.participants
            .hasAny([uid()])
        );
    }

    // ------------- users -------------

    match /users/{userId} {
      // Unverified users may read ONLY their own user doc.
      // Staff can read/list user docs for moderation/admin tasks.
      allow get: if isSignedIn() &&
                (
                  uid() == userId ||
                  (userIsActive() && userIsStaff())
                );
      allow list: if userIsActive() && userIsStaff();

      allow create: if isSignedIn() &&
                    uid() == userId &&
                    request.resource.data.role == "USER" &&
                    request.resource.data.status == "ACTIVE";

      allow update: if isSignedIn() &&
                    (
                      (
                        // Regular users cannot change role/status/displayName.
                        uid() == userId &&
                        request.resource.data.role == resource.data.role &&
                        request.resource.data.status == resource.data.status &&
                        request.resource.data.displayName == resource.data.displayName &&
                        // Trophies are awarded server-side (Cloud Functions). Users cannot self-award.
                        request.resource.data.trophies == resource.data.trophies
                      )
                      ||
                      (
                        // Admin can manage role/status/etc, but displayName stays immutable.
                        userIsActive() &&
                        userIsAdmin() &&
                        request.resource.data.displayName == resource.data.displayName
                      )
                      ||
                      (
                        // Moderators can suspend users (but cannot ban, change roles, etc).
                        userIsActive() &&
                        userIsModerator() &&
                        request.resource.data.role == resource.data.role &&
                        request.resource.data.displayName == resource.data.displayName &&
                        request.resource.data.status == "SUSPENDED" &&
                        request.resource.data.suspendUntil is timestamp &&
                        request.resource.data.suspendUntil > request.time &&
                        request.resource.data.diff(resource.data).changedKeys().hasOnly([
                          "status",
                          "suspendUntil"
                        ])
                      )
                    );

      allow delete: if userIsAdmin();

      match /notifications/{id} {
        allow read, write: if userIsActive() && uid() == userId;
      }

      match /watchlist/{listingId} {
        allow read, write: if userIsActive() && uid() == userId;
      }

      match /favoriteStores/{storeId} {
        allow read, write: if userIsActive() && uid() == userId;
      }

      match /storefronts/{storeId} {
        allow read, write: if userIsActive() && uid() == userId;
      }
    }

    // ------------- sellerApplications -------------

    match /sellerApplications/{applicationId} {
      allow get, list: if userIsActive() &&
                       (userIsAdmin() || resource.data.ownerUid == uid());

      allow create: if userIsActive() &&
                    userCanApplyToBeSeller() &&
                    request.resource.data.ownerUid == uid() &&
                    request.resource.data.status == "PENDING";

      allow update, delete: if userIsAdmin();
    }

    // ------------- storefronts -------------

    match /storefronts/{storeId} {
      allow get, list: if userIsActive();

      allow create: if isSignedIn() && (
        (
          userCanCreateStore() &&
          request.resource.data.ownerUid == uid() &&
          request.resource.data.storeName == userData().displayName &&
          request.resource.data.status == "ACTIVE"
        ) ||
        userIsAdmin()
      );

      allow update: if isSignedIn() &&
                    (
                      (userIsSeller() && resource.data.ownerUid == uid()) ||
                      userIsAdmin()
                    ) &&
                    request.resource.data.storeName == resource.data.storeName &&
                    request.resource.data.slug == resource.data.slug &&
                    request.resource.data.ownerUid == resource.data.ownerUid;

      allow delete: if isSignedIn() &&
                    (
                      (userIsSeller() && resource.data.ownerUid == uid()) ||
                      userIsAdmin()
                    );

      match /reviews/{reviewId} {
        function reviewOrderData() {
          return get(
            /databases/$(database)/documents/orders/$(request.resource.data.orderId)
          ).data;
        }

        allow get, list: if userIsActive();

        allow create: if userIsActive() &&
                      request.resource.data.buyerUid == uid() &&
                      reviewOrderData().buyerUid == uid() &&
                      reviewOrderData().storeId == storeId;

        allow update, delete: if userIsAdmin();
      }
    }

    // ------------- listings -------------

    match /listings/{listingId} {
      allow get, list: if userIsActive();

      allow create: if isSignedIn() &&
                    ((userIsSeller() &&
                      request.resource.data.ownerUid == uid()) ||
                     userIsAdmin());

      allow update, delete: if isSignedIn() &&
                            (
                              (userIsSeller() && resource.data.ownerUid == uid()) ||
                              (userIsActive() && userIsStaff())
                            );
    }

    // ------------- orders (STRIPE FIX HERE) -------------

    match /orders/{orderId} {
      allow get, list: if userIsActive() &&
                       (
                         userIsAdmin() ||
                         resource.data.buyerUid == uid() ||
                         resource.data.sellerUid == uid()
                       );

      allow create: if userIsActive() &&
                    request.resource.data.buyerUid == uid();

      allow update: if
        userIsAdmin()
        ||
        (
          isSignedIn() &&
          (
            resource.data.buyerUid == uid() ||
            resource.data.sellerUid == uid()
          )
        );

      allow delete: if userIsAdmin();
    }

    // ------------- iso24Posts -------------

    match /iso24Posts/{isoId} {
      allow get, list: if userIsActive();

      allow create: if isSignedIn() &&
                    (userIsActive() || userIsAdmin()) &&
                    request.resource.data.ownerUid == uid();

      allow update, delete: if isSignedIn() &&
                            (
                              (userIsActive() && userIsStaff()) ||
                              userIsAdmin() ||
                              (userIsActive() &&
                               resource.data.ownerUid == uid())
                            );

      match /comments/{commentId} {
        allow get, list: if userIsActive();

        allow create: if userIsActive() &&
                      request.resource.data.authorUid == uid();

        allow update, delete: if isSignedIn() &&
                              (
                                userIsAdmin() ||
                                (userIsActive() &&
                                 resource.data.authorUid == uid())
                              );
      }
    }

    // ------------- communityMessages -------------

    match /communityMessages/{messageId} {
      allow get, list: if userIsActive();
      allow create: if isSignedIn() &&
                    (userIsActive() || userIsAdmin());
      allow update, delete: if userIsActive() && userIsStaff();
    }

    // ------------- conversations -------------

    match /conversations/{conversationId} {
      allow create: if userIsActive() &&
                    request.resource.data.participantUids.hasAny([uid()]);

      allow get, list, update: if userIsActive() &&
                               (isConversationParticipant(conversationId) ||
                                userIsAdmin());

      allow delete: if userIsAdmin();

      match /messages/{messageId} {
        allow get, list: if userIsActive() &&
                         (isConversationParticipant(conversationId) ||
                          userIsAdmin());

        allow create: if userIsActive() &&
                      isConversationParticipant(conversationId);

        allow update, delete: if userIsActive() &&
                              (isConversationParticipant(conversationId) ||
                               userIsAdmin());
      }
    }

    // ------------- reports -------------

    match /reports/{reportId} {
      allow create: if userIsActive() &&
                    request.resource.data.reporterUid == uid();

      allow get, list: if userIsActive() &&
                       (
                         userIsStaff() ||
                         resource.data.reporterUid == uid()
                       );

      allow update: if userIsActive() && userIsStaff();

      allow delete: if userIsAdmin();
    }

    // ------------- spotlightSlots -------------

    match /spotlightSlots/{slotId} {
      allow get, list: if userIsActive();
      allow create, update, delete: if userIsAdmin();
    }

    // ------------- deny everything else -------------

    match /{path=**} {
      allow read, write: if false;
    }
  }
}