rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --------------------------------
    // Helper Functions
    // --------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isStoreOwner(storeId) {
      let store = get(/databases/$(database)/documents/storefronts/$(storeId));
      return store != null && isOwner(store.data.ownerUid);
    }
    
    function isOrderBuyer(order) {
      return isOwner(order.buyerUid);
    }
    
    function isOrderSeller(order) {
      return isOwner(order.sellerUid);
    }
    
    // --------------------------------
    // Collection Rules
    // --------------------------------

    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if false; // Do not allow listing all users
      allow create, update: if isOwner(userId);
      allow delete: if false; // Users should not be able to delete their own account from the client
    }

    match /storefronts/{storefrontId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.ownerUid == request.auth.uid;
      allow update, delete: if isOwner(resource.data.ownerUid);
    }
    
    match /listings/{listingId} {
      allow get, list: if true;
      allow create: if isSignedIn() && isStoreOwner(request.resource.data.storeId);
      allow update, delete: if isOwner(resource.data.ownerUid);
    }

    match /orders/{orderId} {
      allow get: if isSignedIn() && (isOrderBuyer(resource.data) || isOrderSeller(resource.data));
      allow list: if false; // Users should query for their own orders, not list all.
      allow create: if isSignedIn() && request.resource.data.buyerUid == request.auth.uid;
      allow update: if isSignedIn() && (isOrderBuyer(resource.data) || isOrderSeller(resource.data));
      allow delete: if false; // Orders should be cancelled via a status update.
    }
    
    match /chat/{messageId} {
        allow read, write: if isSignedIn();
    }

    match /iso24Posts/{isoId} {
        allow read, write: if isSignedIn(); // Simplified for now
    }
  }
}

    